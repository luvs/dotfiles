{
  "title":"Caps Lock (Ctrl) + IJKL",
  "rules":[
    {
      "description":"Caps Lock to Ctrl",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"caps_lock",
            "modifiers":{
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"left_control"
            }
          ]
        }
      ]
    },
    {
      "description":"Ctrl + I/J/K/L to Arrow Keys",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"i",
            "modifiers":{
              "mandatory":[
                "left_control"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"j",
            "modifiers":{
              "mandatory":[
                "left_control"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"k",
            "modifiers":{
              "mandatory":[
                "left_control"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"l",
            "modifiers":{
              "mandatory":[
                "left_control"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        }
      ]
    },
    {
      "description":"Ctrl + H to Delete",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"h",
            "modifiers":{
              "mandatory":[
                "left_control"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"delete_or_backspace"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        }
      ]
    },
    {
      "description":"Disable arrows",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"left_arrow"
          },
          "to":[
            {
              "key_code":"vk_none"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"right_arrow"
          },
          "to":[
            {
              "key_code":"vk_none"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"up_arrow"
          },
          "to":[
            {
              "key_code":"vk_none"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"down_arrow"
          },
          "to":[
            {
              "key_code":"vk_none"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        }
      ]
    },
    {
      "description":"Disable Delete",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"delete_or_backspace"
          },
          "to":[
            {
              "key_code":"vk_none"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.kovidgoyal.kitty"
              ]
            }
          ]
        }
      ]
    }
  ]
}
